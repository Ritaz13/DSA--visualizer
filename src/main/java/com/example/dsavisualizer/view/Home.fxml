<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.dsavisualizer.HomeController">

    <!-- ToggleButton top-right -->
    <ToggleButton fx:id="modeSwitch" text="Dark Mode" onAction="#toggleTheme"
                  AnchorPane.topAnchor="10" AnchorPane.rightAnchor="10"/>

    <!-- Buttons Grid in center -->
    <GridPane alignment="CENTER" hgap="40" vgap="40"
              AnchorPane.topAnchor="50" AnchorPane.leftAnchor="0"
              AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">

        <padding>
            <Insets top="30" bottom="30" left="30" right="30"/>
        </padding>

        <!-- Row 1 -->
        <Button GridPane.rowIndex="0" GridPane.columnIndex="0" onAction="#openPage1" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Recursion"/>
                </VBox>
            </graphic>
        </Button>

        <Button GridPane.rowIndex="0" GridPane.columnIndex="1" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Array"/>
                </VBox>
            </graphic>
        </Button>

        <Button GridPane.rowIndex="0" GridPane.columnIndex="2" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Linked List"/>
                </VBox>
            </graphic>
        </Button>

        <Button GridPane.rowIndex="0" GridPane.columnIndex="3" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="BST"/>
                </VBox>
            </graphic>
        </Button>

        <!-- Row 2 -->
        <Button GridPane.rowIndex="1" GridPane.columnIndex="0" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Graph"/>
                </VBox>
            </graphic>
        </Button>

        <Button GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Stack"/>
                </VBox>
            </graphic>
        </Button>

        <Button GridPane.rowIndex="1" GridPane.columnIndex="2" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Queue"/>
                </VBox>
            </graphic>
        </Button>

        <Button GridPane.rowIndex="1" GridPane.columnIndex="3" prefWidth="120" prefHeight="120">
            <graphic>
                <VBox alignment="CENTER" spacing="10">
                    <Label text="Sorting"/>
                </VBox>
            </graphic>
        </Button>

    </GridPane>
</AnchorPane>
