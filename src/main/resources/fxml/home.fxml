<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<BorderPane fx:controller="com.example.dsavisualizer.HomeController"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@/styles.css">

    <!-- Top bar with theme toggle -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <ToggleButton fx:id="themeToggle" text="Dark Mode"/>
        </HBox>
    </top>

    <!-- Center GridPane with 8 buttons -->
    <center>
        <GridPane hgap="30" vgap="30" alignment="CENTER">

            <!-- Recursion Button with image (no text) -->
            <Button onAction="#openModule"
                    GridPane.rowIndex="0" GridPane.columnIndex="0"
                    prefWidth="300" prefHeight="240"
                    styleClass="image-button">
                <graphic>
                    <ImageView fx:id="recursionIcon"
                               fitWidth="300"
                               fitHeight="240"
                               preserveRatio="true">
                        <image>
                            <Image url="@/images/recursion.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

            <!-- Other buttons without image -->
            <Button text="Array" onAction="#openModule" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            <Button text="Graph" onAction="#openModule" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
            <Button text="BST" onAction="#openModule" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <Button text="Linked List" onAction="#openModule" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            <Button text="Stack" onAction="#openModule" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
            <Button text="Queue" onAction="#openModule" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <Button text="Sorting" onAction="#openModule" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        </GridPane>
    </center>

</BorderPane>
